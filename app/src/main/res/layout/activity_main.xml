<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="@android:dimen/thumbnail_height"
            android:id="@+id/tvExpressao"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textColor="@android:color/black" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:id="@+id/tvResultado" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvExpressao" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"/>
    <Button
            android:text="CE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCE" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvResultado" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
            android:text="("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvResultado" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.33" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClose"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvResultado" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.66" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDivisao" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvResultado" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSete" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCE" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOito" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOpen" app:layout_constraintHorizontal_bias="0.33"
            android:backgroundTint="@android:color/holo_blue_light"
            style="@android:style/Widget.Material.Button.Colored"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNove" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnClose" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.66" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMultiplicacao" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDivisao"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQuatro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSete" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:backgroundTint="@android:color/holo_blue_light"
            style="@android:style/Widget.Material.Button.Colored"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCinco" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOito" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.33" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSeis" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNove" app:layout_constraintHorizontal_bias="0.66"
            android:backgroundTint="@android:color/holo_blue_light"
            style="@android:style/Widget.Material.Button.Colored"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubtracao" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacao" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:backgroundTint="@android:color/holo_orange_dark"
            style="@android:style/Widget.Material.Button.Colored"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUm" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnQuatro" app:layout_constraintHorizontal_bias="0.0"
            style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDois"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.33" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCinco" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTres" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSeis" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.66" android:backgroundTint="@android:color/holo_blue_light"
            style="@android:style/Widget.Material.Button.Colored"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSoma" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSubtracao" app:layout_constraintHorizontal_bias="1.0"
            android:backgroundTint="@android:color/holo_orange_dark"
            style="@android:style/Widget.Material.Button.Colored"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPonto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnUm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnZero" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDois" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.33" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_blue_light"/>
    <ImageButton
            android:layout_width="88dp"
            app:srcCompat="@android:drawable/ic_input_delete"
            android:id="@+id/btnLimpar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTres" app:layout_constraintHorizontal_bias="0.66"
            style="@android:style/Widget.Material.ImageButton" android:backgroundTint="@android:color/holo_green_dark"
            android:layout_height="48dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIgual" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSoma" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" style="@android:style/Widget.Material.Button.Colored"
            android:backgroundTint="@android:color/holo_orange_dark"/>
</android.support.constraint.ConstraintLayout>